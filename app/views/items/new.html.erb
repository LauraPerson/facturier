<div class="container">
  <div class="d-flex justify-content-between border-bottom my-4">
    <h3 class="d-none-xs">New Item</h3>
    <h3>Add an item</h3>
  </div>
  <div class="row justify-content-center">
    <div class="col-6">
      <h1>2/ Ajouter des éléments</h1>
      <%= simple_form_for([@invoice, @item], data: {turbo: false}) do |f| %>
        <%= f.input :name, label:"Désignation" %>
        <%= f.input :quantity, label:"Quantité" %>
        <%= f.input :unit, label:"Unité" %>
        <%= f.input :price, label:"Prix" %>
        <%= f.submit "Ajouter un item", class:"button button-primary" %>
      <% end %>

    </div>
  
  </div>
</div>
